[node name="HSeparator" type="HSeparator" parent="VBoxContainer"]
layout_mode = 2

[node name="AnalyzeFileButton" type="Button" parent="VBoxContainer"]
layout_mode = 2
text = "Analyze Any File (Ctrl+A)"

[node name="ParseImgButton" type="Button" parent="VBoxContainer"]
layout_mode = 2
text = "Parse IMG Archive (Ctrl+I)"

[node name="ParseDffButton" type="Button" parent="VBoxContainer"]
layout_mode = 2
