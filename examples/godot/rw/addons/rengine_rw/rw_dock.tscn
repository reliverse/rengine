[gd_scene load_steps=3 format=3 uid="uid://dock_scene"]

[ext_resource type="Script" path="res://addons/rengine_rw/rw_dock.gd" id="1"]

[node name="RwDock" type="Control"]
focus_mode = 2  # Click focus
script = ExtResource("1")

[node name="VBoxContainer" type="VBoxContainer" parent="."]
layout_mode = 1
