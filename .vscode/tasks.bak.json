{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "CMake: configure (SDK)",
      "command": "cmake",
      "args": [
        "-S",
        "${workspaceFolder}",
        "-B",
        "${workspaceFolder}/build/sdk",
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "CMake: build (SDK)",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build/sdk",
        "--config",
        "Release"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": ["CMake: configure (SDK)"]
    },
    {
      "label": "BetterRadar: Clean build directory (delete cache)",
      "type": "shell",
      "command": "if (Test-Path \"${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar/build\") { Remove-Item -Recurse -Force \"${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar/build\" }",
      "problemMatcher": []
    },
    {
      "label": "BetterRadar: Reconfigure (fresh, Win32)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        "${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar",
        "-B",
        "${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar/build",
        "-G",
        "Visual Studio 17 2022",
        "-A",
        "Win32"
      ],
      "problemMatcher": ["$msCompile"],
      "dependsOn": ["BetterRadar: Clean build directory (delete cache)"],
      "group": "build"
    },
    {
      "label": "BetterRadar: Configure (CMake)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        "${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar",
        "-B",
        "${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar/build",
        "-G",
        "Visual Studio 17 2022",
        "-A",
        "Win32"
      ],
      "problemMatcher": ["$msCompile"],
      "group": "build"
    },
    {
      "label": "BetterRadar: Build (Debug)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar/build",
        "--config",
        "Debug"
      ],
      "problemMatcher": ["$msCompile"],
      "group": "build",
      "dependsOn": ["BetterRadar: Configure (CMake)"]
    },
    {
      "label": "BetterRadar: Build (Release)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar/build",
        "--config",
        "Release"
      ],
      "problemMatcher": ["$msCompile"],
      "group": "build",
      "dependsOn": ["BetterRadar: Configure (CMake)"]
    },
    {
      "label": "BetterRadar: Clean",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar/build",
        "--target",
        "CLEAN",
        "--config",
        "Debug"
      ],
      "problemMatcher": []
    },
    {
      "label": "PluginSDK: Build plugin_sa (zDebug)",
      "type": "shell",
      "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
      "args": [
        "${workspaceFolder}/apps/sdk/gtasa/plugin-sdk/plugin.sln",
        "/m",
        "/t:plugin_sa",
        "/p:Configuration=zDebug",
        "/p:Platform=Mixed Platforms"
      ],
      "problemMatcher": ["$msCompile"],
      "group": "build"
    },
    {
      "label": "PluginSDK: Build plugin_sa (Release)",
      "type": "shell",
      "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
      "args": [
        "${workspaceFolder}/apps/sdk/gtasa/plugin-sdk/plugin.sln",
        "/m",
        "/t:plugin_sa",
        "/p:Configuration=Release",
        "/p:Platform=Mixed Platforms"
      ],
      "problemMatcher": ["$msCompile"],
      "group": "build"
    },
    {
      "label": "PluginSDK: Clean plugin_sa",
      "type": "shell",
      "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
      "args": [
        "${workspaceFolder}/apps/sdk/gtasa/plugin-sdk/plugin.sln",
        "/m",
        "/t:plugin_sa:Clean",
        "/p:Configuration=Release",
        "/p:Platform=Mixed Platforms"
      ],
      "problemMatcher": []
    },
    {
      "label": "BetterRadar: Clean All",
      "type": "shell",
      "command": "if (Test-Path \"${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar/build\") { Remove-Item -Recurse -Force \"${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar/build\" }; if (Test-Path \"${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar/bin\") { Remove-Item -Recurse -Force \"${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar/bin\" }; if (Test-Path \"${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar/obj\") { Remove-Item -Recurse -Force \"${workspaceFolder}/apps/sdk/gtasa/src-mods/BetterRadar/obj\" }",
      "problemMatcher": []
    }
  ]
}
